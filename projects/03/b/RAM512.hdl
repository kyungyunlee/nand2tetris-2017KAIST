/**
 * Memory of 512 registers, each 16 bit-wide. Out holds the value
 * stored at the memory location specified by address. If load==1, then 
 * the in value is loaded into the memory location specified by address 
 * (the loaded value will be emitted to out from the next time step onward).
 */

CHIP RAM512 {
    IN in[16], load, address[9];
    OUT out[16];

    PARTS:
    // Put your code here:
    DMux8Way(in=load, sel=address[6..8], a=topa, b=topb, c=topc, d=topd, e=tope, f=topf, g=topg, h=toph);
    RAM64(in=in, load=topa, address = address[0..5], out=out1);
    RAM64(in=in, load=topb, address = address[0..5], out=out2);
    RAM64(in=in, load=topc, address = address[0..5], out=out3);
    RAM64(in=in, load=topd, address = address[0..5], out=out4);
    RAM64(in=in, load=tope, address = address[0..5], out=out5);
    RAM64(in=in, load=topf, address = address[0..5], out=out6);
    RAM64(in=in, load=topg, address = address[0..5], out=out7);
    RAM64(in=in, load=toph, address = address[0..5], out=out8);
    Mux8Way16(a=out1, b=out2, c=out3, d=out4, e=out5,f=out6,g=out7, h=out8, sel=address[6..8], out=out);
}
